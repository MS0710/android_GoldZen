<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_rankDetail_round"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="關卡"
        android:textSize="15dp"
        android:background="@drawable/textview_content_border"
        android:padding="5dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_rankDetail_playTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="遊玩次數"
        android:textSize="15dp"
        android:background="@drawable/textview_content_border"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_rankDetail_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="花費時間"
        android:textSize="15dp"
        android:background="@drawable/textview_content_border"
        android:padding="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txt_rankDetail_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="通關狀況"
        android:textSize="15dp"
        android:background="@drawable/textview_content_border"
        android:padding="5dp"
        android:gravity="center"/>


</LinearLayout>