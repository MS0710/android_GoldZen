<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="@color/background_color">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img_main_mainPeople"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/main_people"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img_main_mainPeople"
        android:background="@drawable/btn_start_game_selector"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/btn_rank"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/btn_rank_selector"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>